<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <fragment
            android:id="@+id/frg"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/relative1"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/change_map_options"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background_3"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/edit_map"
                    android:textColorHint="#000000"
                    android:textSize="15dp" />
                <ImageButton
                    android:id="@+id/re_center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/change_map_options"
                    android:background="@drawable/circle_background_3"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/gps_transperent"
                    android:textColorHint="#000000"
                    android:textSize="15dp" />
            </RelativeLayout>
        </fragment>
    </LinearLayout>
</LinearLayout>
